{% from '_macros/lib.twig' import img %}

{% if featuredImage %}
    <figure>
        {{ img(featuredImage, {
            transform: {width: 1024, height: 300},
            srcset: [1024, 640, 400],
            attr: {loading: null}
        }) }}
        {% include '_partials/image-figcaption.twig' with {
            copyright: featuredImage.copyright
        } only %}
    </figure>

{% endif %}
