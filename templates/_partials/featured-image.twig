{% from '_macros/lib.twig' import img %}

{% if featuredImage %}
    <figure class="pt-8">
        {{ img(featuredImage, {
            transform: {width: 900, height: 300},
            srcset: [900, 640, 400],
            attr: {loading: null}
        }) }}
        {% include '_partials/image-figcaption.twig' with {
            copyright: featuredImage.copyright
        } only %}
    </figure>

{% endif %}
