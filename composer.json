{
  "description": "Minimum preconfigured starter for Craft 4",
  "name": "wsydney76/craft4_project",
  "version": "2.0.0",
  "license": "Unlicense",
  "require": {
    "craftcms/cms": "4.7.2.1",
    "doublesecretagency/craft-cpcss": "2.6.0",
    "nystudio107/craft-vite": "4.0.8",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "craftcms/generator": "^1.6.1",
    "yiisoft/yii2-shell": "^2.0.5"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.0.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "scripts": {
    "pre-update-cmd": [
      "@php craft off"
    ],
    "post-update-cmd": [
      "@php craft clear-caches/all",
      "@php craft migrate/all",
      "@php craft on",
      "@php craft project-config/rebuild"
    ]
  }
}
